# AcuNexus Environment Configuration
# Copy this file to .env and update with your values

# ============================================
# Flask Configuration
# ============================================
FLASK_ENV=production
SECRET_KEY=your-secret-key-here-generate-with-script
PORT=5000

# ============================================
# Database Configuration
# ============================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=acunexus
POSTGRES_USER=acunexus
POSTGRES_PASSWORD=change-this-secure-password

# Full database URL (alternative to individual settings)
# DATABASE_URL=postgresql://acunexus:password@postgres:5432/acunexus

# ============================================
# Encryption Configuration
# ============================================
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-encryption-key-here

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins, or * for all
CORS_ORIGINS=*

# ============================================
# Docker Ports
# ============================================
NGINX_PORT=8080
NGINX_SSL_PORT=8443
POSTGRES_PORT=5432  # Remove or change in production

# ============================================
# Redis Configuration (Future)
# ============================================
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_PASSWORD=

# ============================================
# Session Configuration
# ============================================
SESSION_TYPE=filesystem
SESSION_PERMANENT=false
PERMANENT_SESSION_LIFETIME=86400  # 24 hours in seconds

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# ============================================
# Application Settings
# ============================================
# Maximum number of clients per user (future feature)
MAX_CLIENTS_PER_USER=50

# Cache TTL for metadata in hours
DEFAULT_CACHE_TTL_HOURS=24

# Rate limiting
RATE_LIMIT_CALLS_PER_SECOND=10.0

# ============================================
# Development Settings
# ============================================
# Set to true to enable debug mode (never in production!)
DEBUG=false

# Set to true to enable hot reloading
RELOAD=false